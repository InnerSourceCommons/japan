{
  "rules": {
    "prh":{
      "rulePaths": [
        "./rules.yml"
      ]
    },
    "preset-ja-technical-writing":{
      "sentence-length": {
        "max": 120,
        "severity": "warning"
      },
      "max-comma": {
        "max": 4
      },
      "max-ten": {
        "max": 4
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": ""
      },
      "ja-no-weak-phrase": false,
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "min_interval" : 3,
        "allow": ["ど", "も", "や"],
        "severity": "warning"
      }
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "InnerSource Commons", 
        "InnerSourceCommons",
        "Adopting InnerSource"
      ]
    }
  }
}
